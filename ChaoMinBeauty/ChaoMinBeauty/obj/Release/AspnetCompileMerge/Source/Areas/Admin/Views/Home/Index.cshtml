
@{
    ViewBag.Title = "Trang Chủ Admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
    </ul>
}
<div class="container mt-3">
    <div class="card" style="width:350px; float:left;">
        <img class="card-img-top" src="~/Content/clients/dist/img/min.jpg" alt="Card image" style="width:100%">
        <div class="card-body">
            <h4 class="card-title" style="font: revert; font-size: x-large; ">Minh Nghĩa</h4>
            <p class="card-text" style="font-style: italic;">Vẻ đẹp không nằm trong gương, mà nằm trong sự tự tin và lòng yêu thương với chính bản thân.</p>
        </div>
    </div>
    <div class="card" style="width:350px; float:left; margin-left: 15px;">
        <img class="card-img-top" src="~/Content/clients/dist/img/chao.jpg" alt="Card image" style="width:100%; height:402px;">
        <div class="card-body">
            <h4 class="card-title" style="font: revert; font-size: x-large; ">Hoài Sang</h4>
            <p class="card-text" style="font-style: italic;">
                Hãy để chúng tôi giúp bạn đắm chìm trong sự toả sáng của cái đẹp
            </p>
        </div>
    </div>
    <div class="card" style="width:350px; float:right;">
        <div class="card-body">
            <img src="~/Content/clients/dist/img/Chaomin.png" alt="Admin Logo" class="brand-image img-circle elevation-3" style="position: absolute; width: 15%; right: 90px; top: 8px;">
            <h4 class="card-title" style="font: revert; font-size: x-large; ">ChaoMin Beauty</h4>
            <br /><br />
            <p class="card-text" style="font-style: italic;">Hãy hợp lực, chinh phục mục tiêu cùng nhau!</p>
            <p class="card-text" style="font-style: italic;">Chúng ta không chỉ là đồng đội, mà là gia đình!</p>
            <p class="card-text" style="font-style: italic;">Bước đi đồng lòng, vượt qua mọi rào cản!</p>
        </div>
        <img class="card-img-top" src="~/Content/clients/dist/img/team.png" alt="Card image" style="width:100%; height:333px;">
    </div>
</div>